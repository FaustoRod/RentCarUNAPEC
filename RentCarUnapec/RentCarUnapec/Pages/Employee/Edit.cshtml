@page
@model RentCarUnapec.Pages.Employee.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Modificar Empleado</h1>

<br />
<hr />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Employee.Name" class="control-label"></label>
                    <input asp-for="Employee.Name" class="form-control letterOnlyInput" />
                    <span asp-validation-for="Employee.Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Employee.LastName" class="control-label"></label>
                    <input asp-for="Employee.LastName" class="form-control letterOnlyInput" />
                    <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Employee.IdentityNumber" class="control-label"></label>
                    <input asp-for="Employee.IdentityNumber" class="form-control numberOnlyInput" />
                    <span asp-validation-for="Employee.IdentityNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Employee.BaseSalary" class="control-label"></label>
                    <input asp-for="Employee.BaseSalary" class="form-control numberOnlyInput" />
                    <span asp-validation-for="Employee.BaseSalary" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Employee.Commission" class="control-label"></label>
                    <input asp-for="Employee.Commission" class="form-control numberOnlyInput" />
                    <span asp-validation-for="Employee.Commission" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Employee.ShiftTypeId" class="control-label"></label>
                    <select asp-for="Employee.ShiftTypeId" class="form-control" asp-items="Model.ShiftTypeList"></select>
                </div>
            </div>
            <input type="hidden" asp-for="Employee.Id" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" class="btn btn-light">Volver <span class="fas fa-undo"></span></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/site.js"></script>
    <script src="~/js/Employee/employeeForm.js"></script>
}
