@page
@model RentCarUnapec.Pages.CarRentInformation.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle de la Renta</h1>

<div>
    <hr />
    <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="CarRentInformation.VehicleId" class="control-label"></label>
                <input asp-for="CarRentInformation.VehicleName" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CarRentInformation.ClientId" class="control-label"></label>
                <input asp-for="CarRentInformation.Client.Name" class="form-control" readonly="readonly"/>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="CarRentInformation.RentStateId" class="control-label"></label>
                <input asp-for="CarRentInformation.RentState.Description" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CarRentInformation.EmployeeId" class="control-label"></label>
                <input asp-for="CarRentInformation.Employee.FullName" class="form-control" readonly="readonly" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="CarRentInformation.RentDay" class="control-label"></label>
                <input asp-for="CarRentInformation.RentDay" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CarRentInformation.ReturnDay" class="control-label"></label>
                <input asp-for="CarRentInformation.ReturnDay" class="form-control" readonly="readonly"/>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="CarRentInformation.RentDays" class="control-label"></label>
                <input asp-for="CarRentInformation.RentDays" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CarRentInformation.AmountPerDay" class="control-label"></label>
                <input asp-for="CarRentInformation.AmountPerDay" class="form-control" readonly="readonly"/>
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.CarRentInformation.Id" class="btn btn-primary">Editar <span class="fas fa-edit"></span></a> |
    <a asp-page="Index" class="btn btn-light">Volver <span class="fas fa-undo"></span></a>
</div>
