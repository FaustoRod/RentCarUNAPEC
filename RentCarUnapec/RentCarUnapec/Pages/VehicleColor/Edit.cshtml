@page
@model RentCarUnapec.Pages.VehicleColor.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Modificar Color de Vehiculo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VehicleColor.Description" class="control-label"></label>
                <input asp-for="VehicleColor.Description" class="form-control letterOnlyInput" />
                <span asp-validation-for="VehicleColor.Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="VehicleColor.Id" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
