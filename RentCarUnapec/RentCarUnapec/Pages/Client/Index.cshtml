@page
@model RentCarUnapec.Pages.Client.IndexModel

@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>
<br/>
<p>
    <a class="btn btn-primary" asp-page="Create">Crear Nuevo <span class="fas fa-plus"></span></a>
</p>
<br/>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].IdentityNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Client) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id"><span class="fas fa-edit"></span></a> |
                <a asp-page="./Delete" asp-route-id="@item.Id"><span class="fas fa-trash"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
